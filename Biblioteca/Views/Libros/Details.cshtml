@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-center">
    <div class="col-md-2 mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <div class="col-md-8 mt-4">
        <h1 class="text-center">Detalle Libros</h1>
    </div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Título)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Título)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Género)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Género)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AñoPublicación)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AñoPublicación)
        </dd>
    </dl>
        <div class="form-group text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fas fa-pencil-alt"></i> Editar
            </a>
        </div>
    </div>
</div>