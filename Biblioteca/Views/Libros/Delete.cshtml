@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Delete";
}

<div class="row align-items-center">
    <div class="col-md-2 mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <div class="col-md-8 mt-4">
        <h1 class="text-center">Eliminar Libro</h1>
    </div>
</div>
<div class="row">
    <h3 class="text-center">¿Estás seguro de eliminar este libro?</h3>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Título)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Título)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Género)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Género)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AñoPublicación)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AñoPublicación)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Id">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </a>
            </div>
    </form>
    </div>
</div>
