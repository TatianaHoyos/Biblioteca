@model Biblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Delete";
}

<div class="row align-items-center">
    <div class="col-md-2 mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <div class="col-md-8 mt-4">
        <h1 class="text-center">Eliminar Libro</h1>
    </div>
</div>
<div class="row">
    <h3 class="text-center">¿Estás seguro de eliminar este libro?</h3>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libro.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model?.Id">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </a>
            </div>
        </form>
</div>
