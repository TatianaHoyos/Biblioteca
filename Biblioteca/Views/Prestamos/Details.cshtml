@model Biblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-center">
    <div class="col-md-2 mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <div class="col-md-8 mt-4">
        <h1 class="text-center">Detalle Libros</h1>
    </div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libro.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>
</div>
<div>
        <div class="form-group text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fas fa-pencil-alt"></i> Editar
            </a>
        </div>
</div>
